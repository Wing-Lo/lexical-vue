{
  "name": "lexical-vue",
  "version": "0.2.4",
  "description": "An extensible Vue 3 web text-editor based on Lexical.",
  "publishConfig": {
    "directory": "package"
  },
  "author": "Robert Soriano <sorianorobertc@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/wobsoriano/lexical-vue#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wobsoriano/lexical-vue.git"
  },
  "bugs": {
    "url": "https://github.com/wobsoriano/lexical-vue/issues"
  },
  "keywords": [
    "vue",
    "lexical",
    "editor",
    "rich-text"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "require": "./dist/lexical-vue.cjs.js",
      "import": "./dist/lexical-vue.es.js"
    }
  },
  "main": "./dist/lexical-vue.cjs.js",
  "module": "./dist/lexical-vue.es.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "rimraf dist && vue-tsc && vite build",
    "release": "bumpp --commit --push --tag && npm publish",
    "prepublishOnly": "rimraf ./package && pnpm run build && clean-publish",
    "postpublish": "rimraf ./package",
    "typecheck": "tsc"
  },
  "peerDependencies": {
    "lexical": "^0.7.0",
    "vue": "^3.2.0"
  },
  "dependencies": {
    "@lexical/clipboard": "^0.7.3",
    "@lexical/code": "^0.7.3",
    "@lexical/dragon": "^0.7.3",
    "@lexical/hashtag": "^0.7.3",
    "@lexical/history": "^0.7.3",
    "@lexical/link": "^0.7.3",
    "@lexical/list": "^0.7.3",
    "@lexical/mark": "^0.7.3",
    "@lexical/markdown": "^0.7.3",
    "@lexical/overflow": "^0.7.3",
    "@lexical/plain-text": "^0.7.3",
    "@lexical/rich-text": "^0.7.3",
    "@lexical/selection": "^0.7.3",
    "@lexical/table": "^0.7.3",
    "@lexical/text": "^0.7.3",
    "@lexical/utils": "^0.7.3",
    "lexical": "0.7.3",
    "vue": "^3.2.45"
  },
  "devDependencies": {
    "@types/node": "^18.11.17",
    "@vitejs/plugin-vue": "^4.0.0",
    "bumpp": "^8.2.1",
    "clean-publish": "^4.0.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.4",
    "vite": "^4.0.2",
    "vue-tsc": "^1.0.14"
  },
  "clean-publish": {
    "withoutPublish": true,
    "tempDir": "package"
  }
}
